<action id="0" name="Set Switch">

	<text text="For" />

	<radio>
		<choice text="one switch">
			<text text="width the id" />
			<switch />
		</choice>
		<choice text="all switches from">
			<group>
				<switch />
				<text value="to" />
				<switch />
			</group>
		</choice>
	</radio>

	<radio>
		<choice text="set it to">
			<radio>
				<choice text="On" color="value" />
				<choice text="Off" color="value" />
				<choice text="a Switch's value">
					<switch />
				</choice>
				<choice text="a random value" />
			</radio>
		</choice>
		<choice text="toggle it" />
	</radio>

</action>