<action id="0" name="Set Switch">

	<text text="For" />

	<radio>
		<choice text="one switch" mute="true">
			<switch scope="Global|Local" />
		</choice>
		<choice text="all switches from">
			<group>
				<switch scope="Global"  />
				<text text="to" />
				<switch scope="Global"  />
			</group>
		</choice>
	</radio>

	<radio>
		<choice text="set it to">
			<radio>
				<choice text="On" color="value" />
				<choice text="Off" color="value" />
				<choice text="a Switch's value" mute="true" >
					<switch />
				</choice>
				<choice text="a random value" />
			</radio>
		</choice>
		<choice text="toggle it" />
	</radio>

</action>