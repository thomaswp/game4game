<action id="4" name="Move Actor">

	<text text="Move" />
	<actorInstance />
	<text text="to" />
	
	<radio>
		<choice text="the exact point">
			<point />		
		</choice>
		<choice text="the variable point">
			<line>
				<text text="(" />
				<variable />
				<text text=", " />
				<variable />
				<text text=")" />
			</line>
		</choice>
	</radio>
	
	<text text="facing" />
	<radio>
		<choice text="left" color="value" />
		<choice text="right" color="value" />
		<choice text="the same direction" />
	</radio>

</action>